<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:layout_centerVertical="true"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:padding="3dp"
            android:id="@+id/imageView">
        </ImageView>

        <TextView
            android:id="@+id/textviewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/imageView"
            android:text="TITLE"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginTop="8dp"></TextView>

        <TextView
            android:id="@+id/textViewdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="desc"
            android:textSize="12sp"
            android:layout_toEndOf="@id/imageView"
            android:layout_below="@id/textviewTitle"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"></TextView>

        <TextView
            android:id="@+id/textViewjumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kebutuhan : 0 buah"
            android:textSize="8sp"
            android:layout_toEndOf="@id/imageView"
            android:layout_below="@id/textViewdesc"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"></TextView>

        <TextView
            android:id="@+id/textViewprogress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/100"
            android:textSize="8sp"
            android:layout_toEndOf="@id/textViewjumlah"
            android:layout_below="@id/progressBar"
            android:layout_marginLeft="160dp"></TextView>


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_toEndOf="@id/imageView"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/textViewjumlah">

        </ProgressBar>


    </RelativeLayout>

</androidx.cardview.widget.CardView>